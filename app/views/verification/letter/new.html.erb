<div class="verification account row">
  <%track_event(category: "verification", action: "success_sms" )%>
  <div class="small-12 column">

    <div class="text-center">
      <div class="small-4 column verification-step completed">
        <span class="number">1</span> <%= t("verification.step_1") %>
      </div>
      <div class="small-4 column verification-step completed">
        <span class="number">2</span> <%= t("verification.step_2") %>
      </div>
      <div class="small-4 column verification-step is-active">
        <span class="number">3</span> <%= t("verification.step_3") %>
      </div>

      <div class="progress small-12 success">
        <span class="meter" style="width: 100%"></span>
      </div>
    </div>

    <div class="small-12 medium-4 column">

      <%= back_link_to account_path, t("verification.back") %>

      <h1><%= t("verification.letter.new.title") %></h1>

      <div class="user-permissions">

        <p><%= t("verification.letter.new.user_permission_info") %></p>

        <ul>
          <li><span class="icon-check"></span>&nbsp;<%= t("verification.user_permission_debates") %></li>
          <li><span class="icon-check"></span>&nbsp;<%= t("verification.user_permission_proposal") %></li>
          <li><span class="icon-check"></span>&nbsp;<%= t("verification.user_permission_support_proposal") %></li>
          <li><span class="icon-x"></span>&nbsp;<%= t("verification.user_permission_votes") %></li>
        </ul>
      </div>

      <%= link_to t("verification.letter.new.go_to_index"), root_path, class: "button warning" %>
    </div>
    <div class="small-12 medium-8 column final-votes-info" style="display: flex">

      <span class="icon-box" style="margin-right: 20px"></span>

      <p style="margin-top: 6px">
        Para participar en las votaciones finales debes <strong>verificarte presencialmente</strong> en la
        <%= link_to "Oficina de AtenciÃ³n Ciudadana", "http://www.ayto-alcaladehenares.es/portalAlcala/contenedor3.jsp?seccion=s_floc_d4_v1.jsp&contenido=977&tipo=1&nivel=1400&layout=contenedor3.jsp&codResi=1&language=es&codResi=1&language=es" %>
        o las <%= link_to "Juntas Municipales de Distrito", "http://www.ayto-alcaladehenares.es/portalAlcala/contenedor1.jsp?seccion=s_lloc_d10_v1.jsp&codbusqueda=167&language=es&codResi=1&codMenuPN=1&codMenu=20&layout=contenedor1.jsp&codigoArea=3&layout=contenedor1.jsp" %>.
      </p>
    </div>
  </div>
</div>
